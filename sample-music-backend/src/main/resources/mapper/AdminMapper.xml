<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sample.music.mapper.AdminMapper">
    <select id="selectUsersByPage" resultType="com.sample.music.pojo.dto.UserDTO">
        select * from user
        <where>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <select id="findUserRoleId" resultType="long">
        select role_id from user_role where user_id = #{userId};
    </select>

    <select id="findUserRoleName" resultType="string">
        select role_name from role where id = #{roleId};
    </select>

    <update id="BarreOrFreedUser">
        update
            user
        set status = #{status}
        where id = #{id}
    </update>
</mapper>